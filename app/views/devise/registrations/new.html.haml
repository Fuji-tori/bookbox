.blank-content

.user-new__form
  .user-new__form--title
    %h2 新規アカウントの作成
    
  .user-new__form--for
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .nickname-field
        .nickname-field__text
          = f.label :ニックネーム, class: "bold"
          %span.require
            必須
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム"
      .email-field
        .email-field__text
          = f.label :メールアドレス, class: "bold"
          %span.require
            必須
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .password-field
        .password-field__text
          = f.label :パスワード, class: "bold"
          - if @minimum_password_length
            %em.bold
              (7文字以上)
          %span.require
            必須
        %br/
        = f.password_field :password, autocomplete: "新規パスワード"
      .confimation-field
        .confimation-field__text
          = f.label :パスワード確認, class: "bold"
        %br/
        = f.password_field :password_confirmation, autocomplete: "新規パスワード"
      .actions
        = f.submit "アカウント作成"
    %br/
    
    = render "devise/shared/links"
    %br/

.blank-content