.box
  .wave.-one
  .wave.-two
  .wave.-three
  .title 
    Book BOX

.book-post__contents
  .book-post__new
    新規投稿
  .contents.row
    - @books.each do |book|
      .content-post{:style => "background-image: url(#{book.image});"}
      .content-post__list
        %ul.content-post__left
          %li.post-list
            タイトル
          %li.data-list
            ジャンル
          %li.post-list
            著者
        %ul.content-post__right
          %li.post-right
            = link_to book_path(book.id) do
              = simple_format(book.book_name)
          %li.detail-list
            = "#{@book.book_genre.parent.parent.name} ＞ #{@book.book_genre.parent.name} ＞ #{@book.book_genre.name}"
          %li.post-right
            = book.author

.blank-content

.footer-line

%footer
  %p.footer-item.bold
    BOOK BOX.

= link_to new_book_path do
  .post-btn
    %span.post-btn__text
      投稿する
    .post-btn__icon